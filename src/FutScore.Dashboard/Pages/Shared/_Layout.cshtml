<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="csrf-token" content="@Html.AntiForgeryToken()" />
    <title>@ViewData["Title"] - FutScore</title>

    <!-- CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/fontawesome/css/all.min.css" />
    <link rel="stylesheet" href="~/lib/datatables/css/jquery.dataTables.min.css" />
    <link rel="stylesheet" href="~/lib/datatables-bs5/css/dataTables.bootstrap5.min.css" />
    <link rel="stylesheet" href="~/lib/datatables-buttons/css/buttons.bootstrap5.min.css" />
    <link rel="stylesheet" href="~/lib/sweetalert2/sweetalert2.min.css" />
    <link rel="stylesheet" href="~/lib/simplebar/simplebar.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <div class="wrapper">
        <!-- Sidebar -->
        <nav class="sidebar" data-simplebar>
            <div class="sidebar-header">
                <a href="/" class="sidebar-brand">
                    <i class="fas fa-futbol"></i>
                    <span>FutScore</span>
                </a>
                <button type="button" class="btn p-0 d-lg-none" id="sidebarToggle">
                    <i class="fas fa-times"></i>
                </button>
            </div>

            <ul class="sidebar-nav">
                <li class="sidebar-item">
                    <a asp-page="/Index" class="sidebar-link @(ViewContext.RouteData.Values["Page"]?.ToString() == "/Index" ? "active" : "")">
                        <i class="fas fa-home"></i>
                        <span>Dashboard</span>
                    </a>
                </li>

                <li class="sidebar-header">Yönetim</li>

                <li class="sidebar-item">
                    <a asp-page="/Leagues/Index" class="sidebar-link @(ViewContext.RouteData.Values["Page"]?.ToString()?.StartsWith("/Leagues") == true ? "active" : "")">
                        <i class="fas fa-trophy"></i>
                        <span>Ligler</span>
                    </a>
                </li>

                <li class="sidebar-item">
                    <a asp-page="/Seasons/Index" class="sidebar-link @(ViewContext.RouteData.Values["Page"]?.ToString()?.StartsWith("/Seasons") == true ? "active" : "")">
                        <i class="fas fa-calendar"></i>
                        <span>Sezonlar</span>
                    </a>
                </li>

                <li class="sidebar-item">
                    <a asp-page="/Teams/Index" class="sidebar-link @(ViewContext.RouteData.Values["Page"]?.ToString()?.StartsWith("/Teams") == true ? "active" : "")">
                        <i class="fas fa-users"></i>
                        <span>Takımlar</span>
                    </a>
                </li>

                <li class="sidebar-item">
                    <a asp-page="/Matches/Index" class="sidebar-link @(ViewContext.RouteData.Values["Page"]?.ToString()?.StartsWith("/Matches") == true ? "active" : "")">
                        <i class="fas fa-gamepad"></i>
                        <span>Maçlar</span>
                    </a>
                </li>
            </ul>
        </nav>

        <!-- Main Content -->
        <div class="main">
            <!-- Top Navbar -->
            <nav class="navbar navbar-expand navbar-light navbar-bg">
                <a class="sidebar-toggle d-flex" id="sidebarToggleBtn">
                    <i class="fas fa-bars"></i>
                </a>

                <div class="navbar-collapse collapse">
                    <ul class="navbar-nav navbar-align">
                        <li class="nav-item dropdown">
                            <a class="nav-icon dropdown-toggle" href="#" id="profileDropdown" data-bs-toggle="dropdown">
                                <i class="fas fa-user-circle fa-lg"></i>
                            </a>
                            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="profileDropdown">
                                <a class="dropdown-item" href="#" data-bs-toggle="modal" data-bs-target="#logoutModal">
                                    <i class="fas fa-sign-out-alt fa-fw me-2"></i>Çıkış Yap
                                </a>
                            </div>
                        </li>
                    </ul>
                </div>
            </nav>

            <!-- Page Content -->
            <main class="content">
                <div class="container-fluid p-0">
                    <div class="row mb-3">
                        <div class="col-auto">
                            <h1 class="h3 mb-0">@ViewData["Title"]</h1>
                        </div>
                    </div>

                    @RenderBody()
                </div>
            </main>

            <!-- Footer -->
            <footer class="footer">
                <div class="container-fluid">
                    <div class="row text-muted">
                        <div class="col-6 text-start">
                            <p class="mb-0">
                                <strong>FutScore</strong> &copy; @DateTime.Now.Year
                            </p>
                        </div>
                        <div class="col-6 text-end">
                            <ul class="list-inline">
                                <li class="list-inline-item">
                                    <span class="badge bg-primary">v1.0.0</span>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>

    <!-- Logout Modal -->
    <div class="modal fade" id="logoutModal" tabindex="-1" aria-labelledby="logoutModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="logoutModalLabel">Çıkış Yap</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Çıkış yapmak istediğinize emin misiniz?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                    <a href="/Identity/Account/Logout" class="btn btn-primary">Çıkış Yap</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Loading Spinner -->
    <div id="loadingSpinner" class="loading-spinner" style="display: none;">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Yükleniyor...</span>
        </div>
    </div>

    <!-- Scripts -->
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/moment/moment.min.js"></script>
    <script src="~/lib/moment/locale/tr.js"></script>
    <script src="~/lib/simplebar/simplebar.min.js"></script>
    <script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
    <script src="~/lib/datatables-bs5/dataTables.bootstrap5.min.js"></script>
    <script src="~/lib/datatables-buttons/js/dataTables.buttons.min.js"></script>
    <script src="~/lib/datatables-buttons/js/buttons.html5.min.js"></script>
    <script src="~/lib/datatables-buttons/js/buttons.print.min.js"></script>
    <script src="~/lib/jszip/jszip.min.js"></script>
    <script src="~/lib/pdfmake/pdfmake.min.js"></script>
    <script src="~/lib/pdfmake/vfs_fonts.js"></script>
    <script src="~/lib/sweetalert2/sweetalert2.all.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
