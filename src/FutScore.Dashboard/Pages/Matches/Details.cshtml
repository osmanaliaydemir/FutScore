@page "{id:int}"
@model FutScore.Dashboard.Pages.Matches.DetailsModel
@{
    ViewData["Title"] = "Maç Detayları";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">@ViewData["Title"]</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/">Ana Sayfa</a></li>
        <li class="breadcrumb-item"><a asp-page="./Index">Maçlar</a></li>
        <li class="breadcrumb-item active">Maç Detayları</li>
    </ol>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-info-circle me-1"></i>
            Maç Detayları
        </div>
        <div class="card-body">
            <div>
                <dl class="row">
                    <dt class="col-sm-2">Sezon</dt>
                    <dd class="col-sm-10">@(Model.Match.Season?.SeasonName ?? "Belirtilmemiş")</dd>

                    <dt class="col-sm-2">Ev Sahibi</dt>
                    <dd class="col-sm-10">@(Model.Match.HomeTeam?.Name ?? "Belirtilmemiş")</dd>

                    <dt class="col-sm-2">Deplasman</dt>
                    <dd class="col-sm-10">@(Model.Match.AwayTeam?.Name ?? "Belirtilmemiş")</dd>

                    <dt class="col-sm-2">Tarih</dt>
                    <dd class="col-sm-10">@Model.Match.MatchDate.ToString("dd.MM.yyyy HH:mm")</dd>

                    <dt class="col-sm-2">Stadyum</dt>
                    <dd class="col-sm-10">@Model.Match.Stadium</dd>

                    <dt class="col-sm-2">Skor</dt>
                    <dd class="col-sm-10">
                        @(Model.Match.HomeTeamScore.HasValue && Model.Match.AwayTeamScore.HasValue 
                            ? $"{Model.Match.HomeTeamScore} - {Model.Match.AwayTeamScore}" 
                            : "-")
                    </dd>

                    <dt class="col-sm-2">Durum</dt>
                    <dd class="col-sm-10">@Model.Match.Status</dd>
                </dl>
            </div>
            <div>
                <a asp-page="./Edit" asp-route-id="@Model.Match.Id" class="btn btn-warning">
                    <i class="fas fa-edit"></i> Düzenle
                </a>
                <a asp-page="./Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Listeye Dön
                </a>
            </div>
        </div>
    </div>
</div> 