@page
@model FutScore.Dashboard.Pages.Stadiums.CreateModel
@{
    ViewData["Title"] = "Yeni Stadyum";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">@ViewData["Title"]</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/">Ana Sayfa</a></li>
        <li class="breadcrumb-item"><a asp-page="./Index">Stadyumlar</a></li>
        <li class="breadcrumb-item active">Yeni Stadyum</li>
    </ol>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-plus me-1"></i>
            Yeni Stadyum Ekle
        </div>
        <div class="card-body">
            <form method="post">
                <div class="mb-3">
                    <label asp-for="Stadium.Name" class="form-label">Stadyum Adı</label>
                    <input asp-for="Stadium.Name" class="form-control" />
                    <span asp-validation-for="Stadium.Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Stadium.City" class="form-label">Şehir</label>
                    <input asp-for="Stadium.City" class="form-control" />
                    <span asp-validation-for="Stadium.City" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Stadium.Capacity" class="form-label">Kapasite</label>
                    <input asp-for="Stadium.Capacity" class="form-control" type="number" min="0" />
                    <span asp-validation-for="Stadium.Capacity" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">Kaydet</button>
                    <a asp-page="./Index" class="btn btn-secondary">İptal</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 