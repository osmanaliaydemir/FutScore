@page "{id:int}"
@model FutScore.Dashboard.Pages.Stadiums.DetailsModel
@{
    ViewData["Title"] = "Stadyum Detayları";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">@ViewData["Title"]</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/">Ana Sayfa</a></li>
        <li class="breadcrumb-item"><a asp-page="./Index">Stadyumlar</a></li>
        <li class="breadcrumb-item active">Stadyum Detayları</li>
    </ol>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-info-circle me-1"></i>
            Stadyum Bilgileri
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-2">Stadyum Adı</dt>
                <dd class="col-sm-10">@Model.Stadium.Name</dd>

                <dt class="col-sm-2">Şehir</dt>
                <dd class="col-sm-10">@Model.Stadium.City</dd>

                <dt class="col-sm-2">Kapasite</dt>
                <dd class="col-sm-10">@Model.Stadium.Capacity</dd>
            </dl>

            <div class="mt-3">
                <a asp-page="./Edit" asp-route-id="@Model.Stadium.Id" class="btn btn-primary">
                    <i class="fas fa-edit"></i> Düzenle
                </a>
                <a asp-page="./Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Listeye Dön
                </a>
            </div>
        </div>
    </div>
</div> 