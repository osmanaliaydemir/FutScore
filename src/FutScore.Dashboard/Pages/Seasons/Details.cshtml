@page "{id:int}"
@model FutScore.Dashboard.Pages.Seasons.DetailsModel
@{
    ViewData["Title"] = "Sezon Detayları";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">@ViewData["Title"]</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/">Ana Sayfa</a></li>
        <li class="breadcrumb-item"><a asp-page="./Index">Sezonlar</a></li>
        <li class="breadcrumb-item active">Sezon Detayları</li>
    </ol>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-info-circle me-1"></i>
            Sezon Bilgileri
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-2">Sezon Adı</dt>
                <dd class="col-sm-10">@Model.Season.SeasonName</dd>

                <dt class="col-sm-2">Lig</dt>
                <dd class="col-sm-10">@Model.LeagueName</dd>

                <dt class="col-sm-2">Başlangıç Tarihi</dt>
                <dd class="col-sm-10">@Model.Season.StartDate.ToShortDateString()</dd>

                <dt class="col-sm-2">Bitiş Tarihi</dt>
                <dd class="col-sm-10">@Model.Season.EndDate.ToShortDateString()</dd>
            </dl>

            <div class="mt-3">
                <a asp-page="./Edit" asp-route-id="@Model.Season.Id" class="btn btn-primary">
                    <i class="fas fa-edit"></i> Düzenle
                </a>
                <a asp-page="./Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Listeye Dön
                </a>
            </div>
        </div>
    </div>
</div> 