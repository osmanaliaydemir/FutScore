@page "{id:int}"
@model FutScore.Dashboard.Pages.Teams.EditModel
@{
    ViewData["Title"] = "Takım Düzenle";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">@ViewData["Title"]</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/">Ana Sayfa</a></li>
        <li class="breadcrumb-item"><a asp-page="./Index">Takımlar</a></li>
        <li class="breadcrumb-item active">Takım Düzenle</li>
    </ol>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-edit me-1"></i>
            Takım Düzenle
        </div>
        <div class="card-body">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Team.Id" />
                
                <div class="form-group mb-3">
                    <label asp-for="Team.Name" class="control-label">Takım Adı</label>
                    <input asp-for="Team.Name" class="form-control" />
                    <span asp-validation-for="Team.Name" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Team.LeagueId" class="control-label">Lig</label>
                    <select asp-for="Team.LeagueId" class="form-control" asp-items="Model.Leagues">
                        <option value="">Lig Seçiniz</option>
                    </select>
                    <span asp-validation-for="Team.LeagueId" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Team.StadiumId" class="control-label">Stadyum</label>
                    <select asp-for="Team.StadiumId" class="form-control" asp-items="Model.Stadiums">
                        <option value="">Stadyum Seçiniz</option>
                    </select>
                    <span asp-validation-for="Team.StadiumId" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Team.City" class="control-label">Şehir</label>
                    <input asp-for="Team.City" class="form-control" />
                    <span asp-validation-for="Team.City" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Team.LogoUrl" class="control-label">Logo URL</label>
                    <input asp-for="Team.LogoUrl" class="form-control" />
                    <span asp-validation-for="Team.LogoUrl" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Kaydet
                    </button>
                    <a asp-page="./Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Listeye Dön
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 