@page
@model ErrorModel
@{
    ViewData["Title"] = "Error";
}

<div class="text-center">
    <div class="error mx-auto" data-text="@Model.ErrorCode">@Model.ErrorCode</div>
    <p class="lead text-gray-800 mb-5">@Model.ErrorMessage</p>
    <p class="text-gray-500 mb-0">@Model.ErrorDescription</p>
    <a href="/">&larr; Back to Dashboard</a>
</div>

