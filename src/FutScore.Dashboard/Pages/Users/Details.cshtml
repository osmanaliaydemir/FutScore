@page "{id:int}"
@model FutScore.Dashboard.Pages.Users.DetailsModel
@{
    ViewData["Title"] = "Kullanıcı Detayları";
}

<div class="container-fluid">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Kullanıcı Detayları</h3>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Kullanıcı Adı</dt>
                <dd class="col-sm-9">@Model.User.Username</dd>

                <dt class="col-sm-3">E-posta</dt>
                <dd class="col-sm-9">@Model.User.Email</dd>

                <dt class="col-sm-3">Ad</dt>
                <dd class="col-sm-9">@Model.User.FirstName</dd>

                <dt class="col-sm-3">Soyad</dt>
                <dd class="col-sm-9">@Model.User.LastName</dd>

                <dt class="col-sm-3">Telefon</dt>
                <dd class="col-sm-9">@Model.User.PhoneNumber</dd>

                <dt class="col-sm-3">Rol</dt>
                <dd class="col-sm-9">@Model.User.Role.ToString()</dd>

                <dt class="col-sm-3">Durum</dt>
                <dd class="col-sm-9">
                    <span class="badge badge-@(Model.User.IsActive ? "success" : "danger")">
                        @(Model.User.IsActive ? "Aktif" : "Pasif")
                    </span>
                </dd>

                <dt class="col-sm-3">Son Giriş Tarihi</dt>
                <dd class="col-sm-9">@(Model.User.LastLoginDate?.ToString("dd.MM.yyyy HH:mm") ?? "Henüz giriş yapılmadı")</dd>

                <dt class="col-sm-3">Kayıt Tarihi</dt>
                <dd class="col-sm-9">@Model.User.CreatedDate.ToString("dd.MM.yyyy HH:mm")</dd>
            </dl>
        </div>
        <div class="card-footer">
            <a asp-page="./Edit" asp-route-id="@Model.User.Id" class="btn btn-primary">Düzenle</a>
            <a asp-page="./Index" class="btn btn-secondary">Listeye Dön</a>
        </div>
    </div>
</div> 