@page "{id:int}"
@model FutScore.Dashboard.Pages.Leagues.DetailsModel
@{
    ViewData["Title"] = "Lig Detayları";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">@ViewData["Title"]</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/">Ana Sayfa</a></li>
        <li class="breadcrumb-item"><a asp-page="./Index">Ligler</a></li>
        <li class="breadcrumb-item active">Lig Detayları</li>
    </ol>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-info-circle me-1"></i>
            Lig Bilgileri
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-2">Lig Adı</dt>
                <dd class="col-sm-10">@Model.League.Name</dd>

                <dt class="col-sm-2">Ülke</dt>
                <dd class="col-sm-10">@Model.League.Country</dd>

                <dt class="col-sm-2">Takım Sayısı</dt>
                <dd class="col-sm-10">@Model.League.TeamCount</dd>

                <dt class="col-sm-2">Lig Logosu</dt>
                <dd class="col-sm-10">@Model.League.LogoUrl</dd>
            </dl>

            <div class="mt-3">
                <a asp-page="./Edit" asp-route-id="@Model.League.Id" class="btn btn-primary">
                    <i class="fas fa-edit"></i> Düzenle
                </a>
                <a asp-page="./Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Listeye Dön
                </a>
            </div>
        </div>
    </div>
</div> 