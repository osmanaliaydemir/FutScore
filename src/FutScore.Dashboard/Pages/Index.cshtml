@page
@model IndexModel
@{
    ViewData["Title"] = "Dashboard";
}

<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Dashboard</h1>
</div>

<!-- Content Row -->
<div class="row">
    <!-- Leagues Card -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-primary shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                            Leagues</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.LeaguesCount</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-trophy fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Teams Card -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-success shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                            Teams</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TeamsCount</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-users fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Matches Card -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-info shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                            Matches</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.MatchesCount</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-gamepad fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Active Seasons Card -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-warning shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                            Active Seasons</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.ActiveSeasonsCount</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-calendar fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Content Row -->
<div class="row">
    <!-- Recent Matches -->
    <div class="col-xl-8 col-lg-7">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Recent Matches</h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>League</th>
                                <th>Home Team</th>
                                <th>Score</th>
                                <th>Away Team</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                           @*  @foreach (var match in Model.RecentMatches)
                            {
                                <tr>
                                    <td>@match.MatchDate.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td>@match.LeagueName</td>
                                    <td>@match.HomeTeamName</td>
                                    <td>@match.HomeTeamScore - @match.AwayTeamScore</td>
                                    <td>@match.AwayTeamName</td>
                                    <td>@match.Status</td>
                                </tr>
                            } *@
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Active Seasons -->
    <div class="col-xl-4 col-lg-5">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Active Seasons</h6>
            </div>
            <div class="card-body">
                @* @foreach (var season in Model.ActiveSeasons)
                {
                    <div class="mb-3">
                        <h4 class="small font-weight-bold">@season.LeagueName - @season.Name <span class="float-right">@season.Progress%</span></h4>
                        <div class="progress mb-4">
                            <div class="progress-bar bg-success" role="progressbar" style="width: @season.Progress%" aria-valuenow="@season.Progress" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </div>
                } *@
            </div>
        </div>
    </div>
</div>
